{
  "name": "toiletmap-api",
  "version": "1.0.0",
  "private": true,
  "description": "Standalone GraphQL API for the Great British Public Toilet Map",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "codegen": "graphql-codegen --config codegen.yml",
    "prisma:generate": "prisma generate",
    "prisma:db:pull": "prisma db pull",
    "check": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.14",
    "@graphql-tools/utils": "^10.7.0",
    "@prisma/client": "^6.5.0",
    "graphql": "^16.10.0",
    "graphql-yoga": "^3.9.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "ngeohash": "^0.6.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/ngeohash": "^0.6.8",
    "@types/node": "24.10.1",
    "prisma": "^6.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
