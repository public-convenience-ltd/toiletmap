{
  "name": "gbptm",
  "description": "API/UI server for the Great British Public Toilet Map",
  "version": "1.0.0",
  "author": "Rupert Redington",
  "bugs": {
    "url": "https://github.com/neontribe/gbptm/issues"
  },
  "dependencies": {
    "JSON2": "^0.1.0",
    "browserify": "^9.0.3",
    "catw": "^0.2.0",
    "co": "^4.5.1",
    "co-body": "^1.1.0",
    "co-request": "^0.2.0",
    "es5-shim": "^4.1.0",
    "exorcist": "^0.1.6",
    "geo-hash": "0.0.2",
    "getobject": "^0.1.0",
    "handlebars": "^3.0.0",
    "hbsfy": "^2.2.1",
    "jquery": "^1.11.1",
    "jquery-ajax-transport-xdomainrequest": "^1.0.4",
    "jquery.cookie": "^1.4.1",
    "koa": "^0.19.1",
    "koa-body": "^1.1.0",
    "koa-compose": "^2.3.0",
    "koa-cors": "0.0.14",
    "koa-etag": "^2.0.0",
    "koa-favicon": "^1.2.0",
    "koa-flash": "^1.0.0",
    "koa-fresh": "0.0.3",
    "koa-gzip": "^0.1.0",
    "koa-hbs": "^0.7.0",
    "koa-helmet": "^0.0.3",
    "koa-json": "^1.1.1",
    "koa-jsonp": "0.1.2",
    "koa-logger": "^1.2.2",
    "koa-passport": "^1.1.4",
    "koa-router": "^4.2.0",
    "koa-session": "^3.1.0",
    "koa-static": "^1.4.9",
    "leaflet": "^0.7.3",
    "leaflet-control-geocoder": "^1.1.0",
    "leaflet-knn": "^0.1.0",
    "leaflet-loading": "^0.1.15",
    "leaflet.locatecontrol": "^0.40.0",
    "leaflet.markercluster": "^0.4.0",
    "lodash": "^3.5.0",
    "lt-ie-9": "^0.1.0",
    "mongoose": "^4.0.2",
    "mongoose-query-paginate": "^1.0.1",
    "mongoose-timestamp": "^0.4.0",
    "object-path": "^0.9.1",
    "opening_hours": "^3.1.0",
    "passport-facebook": "^2.0.0",
    "passport-github": "^0.1.5",
    "passport-google-oauth": "^0.2.0",
    "passport-http": "^0.2.2",
    "passport-openstreetmap": "^0.1.2",
    "passport-twitter": "^1.0.3",
    "thunkify": "^2.1.2",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "mocha": "^2.2.1",
    "mongoose-fakery": "^0.1.7",
    "nodemon": "^1.3.7",
    "standard": "^3.2.1",
    "supertest": "^0.15.0",
    "watchify": "^0.10.2"
  },
  "engines": {
    "node": ">=6.2.1",
    "npm": ">=3.9.3"
  },
  "homepage": "https://github.com/neontribe/gbptm",
  "keywords": [
    "geoJSON",
    "koa",
    "mongodb",
    "public",
    "toilet",
    "uk"
  ],
  "license": "MIT",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/neontribe/gbptm.git"
  },
  "scripts": {
    "build": "browserify -t hbsfy -g uglifyify -r ./ui/browser.js --standalone gbptm -o ./ui/public/gbptm.min.js && npm run buildcss && npm run shimmy",
    "buildcss": "cat ./ui/css/vendor/*.css ./ui/css/*.css > ./ui/public/gbptm.css",
    "dev": "npm run watchjs & npm run watchcss & export $(cat .env | xargs) && nodemon -e js,hbs -i gbptm.min.js --debug app.js",
    "postinstall": "npm run build",
    "shimmy": "awk 'FNR==1{print \"\"}1' ./node_modules/es5-shim/es5-shim.min.js ./node_modules/lt-ie-9/lt-ie-9.min.js ./node_modules/JSON2/json2.js > ./ui/public/shims/shims.min.js",
    "start": "node app.js",
    "lint": "standard",
    "test": "export NODE_ENV=test &&   node  ./node_modules/.bin/_mocha --recursive test/**/*.js -R spec",
    "watchcss": "catw ./ui/css/vendor/*.css ./ui/css/*.css -o ./ui/public/gbptm.css -v",
    "watchjs": "watchify -t hbsfy -r ./ui/browser.js --standalone gbptm --debug --verbose -o ./ui/public/gbptm.min.js",
    "pullconfig": "heroku config:pull --overwrite --interactive --app gbptm-stage"
  }
}
