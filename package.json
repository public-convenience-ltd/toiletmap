{
  "name": "gbptm",
  "description": "API/UI server for the Great British Public Toilet Map",
  "version": "1.1.0",
  "author": "Rupert Redington",
  "bugs": {
    "url": "https://github.com/neontribe/gbptm/issues"
  },
  "dependencies": {
    "browserify": "^13.0.1",
    "catw": "^1.0.1",
    "co": "^4.5.1",
    "co-body": "^4.2.0",
    "co-request": "^1.0.0",
    "es5-shim": "^4.1.0",
    "exorcist": "^0.4.0",
    "geo-hash": "0.0.2",
    "getobject": "^0.1.0",
    "handlebars": "^4.0.5",
    "hbsfy": "^2.7.0",
    "jquery": "1.12.4",
    "jquery-ajax-transport-xdomainrequest": "^1.0.4",
    "js-cookie": "^2.1.2",
    "koa": "^1.2.0",
    "koa-body": "^1.1.0",
    "koa-compose": "^2.3.0",
    "koa-compress": "^1.0.9",
    "koa-cors": "^0.0.16",
    "koa-etag": "^2.0.0",
    "koa-favicon": "^1.2.0",
    "koa-flash": "^1.0.0",
    "koa-fresh": "0.0.3",
    "koa-hbs": "^0.8.1",
    "koa-helmet": "^1.0.0",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.2.2",
    "koa-passport": "^1.1.4",
    "koa-router": "^4.2.0",
    "koa-session": "^3.3.1",
    "koa-sslify": "^1.0.1",
    "koa-static": "^2.0.0",
    "leaflet": "^0.7.3",
    "leaflet-control-geocoder": "^1.1.0",
    "leaflet-knn": "^0.1.0",
    "leaflet-loading": "^0.1.15",
    "leaflet.locatecontrol": "0.40.0",
    "leaflet.markercluster": "^0.5.0",
    "lodash": "^4.13.1",
    "lt-ie-9": "^0.1.0",
    "mime": "^1.3.4",
    "mongoose": "^4.5.1",
    "mongoose-timestamp": "^0.6.0",
    "newrelic": "^1.28.3",
    "object-path": "^0.11.1",
    "opening_hours": "^3.4.0",
    "passport-facebook": "^2.1.1",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^1.0.0",
    "passport-http": "^0.3.0",
    "passport-openstreetmap": "^0.1.2",
    "passport-twitter": "^1.0.4",
    "thunkify": "^2.1.2",
    "uglifyify": "^3.0.2"
  },
  "devDependencies": {
    "bluebird": "^3.4.1",
    "coveralls": "^2.11.11",
    "istanbul": "^0.4.4",
    "mocha": "^2.2.1",
    "mongoose-fakery": "^0.1.7",
    "nodemon": "^1.3.7",
    "standard": "^8.0.0",
    "supertest": "^0.15.0",
    "watchify": "^0.10.2"
  },
  "engines": {
    "node": ">=6.2.1",
    "npm": ">=3.9.3"
  },
  "homepage": "https://github.com/neontribe/gbptm",
  "keywords": [
    "geoJSON",
    "koa",
    "mongodb",
    "public",
    "toilet",
    "uk"
  ],
  "license": "MIT",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/neontribe/gbptm.git"
  },
  "scripts": {
    "build": "browserify -t hbsfy -g uglifyify -r ./ui/browser.js --standalone gbptm -o ./ui/public/gbptm.min.js && npm run buildcss && npm run shimmy",
    "buildcss": "cat ./ui/css/vendor/*.css ./ui/css/*.css > ./ui/public/gbptm.css",
    "dev": "npm run watchjs & npm run watchcss & export $(cat .env | xargs) && nodemon -e js,hbs -i gbptm.min.js --debug app.js",
    "postinstall": "npm run build",
    "shimmy": "awk 'FNR==1{print \"\"}1' ./node_modules/es5-shim/es5-shim.min.js ./node_modules/lt-ie-9/lt-ie-9.min.js  > ./ui/public/shims/shims.min.js",
    "start": "node app.js",
    "lint": "standard",
    "test": "if [ \"$COVERALLS\" ]; then  npm run test_coveralls; else npm run test_bare; fi;",
    "test_coveralls": "export NODE_ENV=test && istanbul cover ./node_modules/.bin/_mocha --report text-lcov --recursive test/**/*.js | node ./node_modules/coveralls/bin/coveralls.js",
    "test_bare": "export NODE_ENV=test && istanbul cover ./node_modules/.bin/_mocha --recursive test/**/*.js",
    "watchcss": "catw ./ui/css/vendor/*.css ./ui/css/*.css -o ./ui/public/gbptm.css -v",
    "watchjs": "watchify -t hbsfy -r ./ui/browser.js --standalone gbptm --debug --verbose -o ./ui/public/gbptm.min.js",
    "pullconfig": "heroku config:pull --overwrite --interactive --app gbptm-stage"
  }
}
