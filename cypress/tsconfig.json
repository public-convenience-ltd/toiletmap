{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "noEmit": true,
    // be explicit about types included
    // to avoid clashing with Jest types
    "types": ["node", "cypress", "@testing-library/cypress"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
